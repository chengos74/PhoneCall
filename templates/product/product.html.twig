{% extends 'base.html.twig' %}

{% block title %} Nos produits
	
{% endblock %}

{% block content %}
	<div class="row">
	{% for message in app.flashes('succes') %}
		<div class="alert alert-info">
			{{ message }}
		</div>
	{% endfor %}
		<div class="col-md-3">
			<h3>Filtrer</h3>
			{{form(recherche)}}
		</div>
			<div class="col-md-9">
				<h1>Nos produits</h1>
				<div class="row">
					{% for product in products %}
					<div class="col-lg-3 col-md-4 col">
						<div class="card mb-3">
						<a href="{{path('product', {'slug' : product.slug }) }} ">
							<img class="img-fluid img-product" src="/uploads/{{ product.illustration}}" alt="Card image cap"></a>
								<div class="card-body">
									<h5 class="card-title text-center">{{product.name}}</h5>
									{# <p class="card-text">{{ product.description}}</p> #}
								</div>
								<div class="card-footer d-flex justify-content-between">
									<small class="text-muted align-item-end">{{(product.price /100)|number_format(2, ',', '.')}}
										€</small>
									<a href="{{path('add_to_cart', {'id' : product.id})}}">
										<i class="fa-sharp fa-solid fa-cart-plus"></i>
									</a>
								</div>
						</div>
					</div>
					{% endfor %}					
				</div>
			</div>
		</div>
	</div>
